<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_content_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/event_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plholder"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/event_name_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_poster"
        android:layout_marginTop="-150dp"
        android:padding="10dp"
        android:textSize="24dp"
        android:textColor="@color/event_name_txt"
        android:background="@color/event_name_background"
        android:singleLine="true"
        android:text="fashion model"/>

    <TextView
        android:id="@+id/event_date_text"
        android:layout_below="@+id/event_name_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:textColor="@color/event_date_text"
        android:background="@color/event_date_background"
        android:text="2015/11/17"/>

</RelativeLayout>
